<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="AttachButton">
        <attr name="attachText" format="string" />
        <attr name="attachIcon" format="reference" />
        <attr name="attachColor" format="color" />
    </declare-styleable>

    <attr name="editable" format="boolean" />
    <attr name="labelText" format="string" />
    <attr name="hintText" format="string" />

    <declare-styleable name="EntryTextView">
        <attr name="labelText" />
        <attr name="hintText" />
        <attr name="editable" />
    </declare-styleable>

    <declare-styleable name="EntryToggleView">
        <attr name="labelText" />
    </declare-styleable>

    <declare-styleable name="EntrySelectView">
        <attr name="labelText" />
        <attr name="hintText" />
        <attr name="editable" />
        <attr name="selectIcon" format="reference" />
    </declare-styleable>

    <declare-styleable name="EntryDateView">
        <attr name="editable" />
    </declare-styleable>

    <declare-styleable name="FontTextView">
        <attr name="font" format="string" />
    </declare-styleable>

    <declare-styleable name="FontButton">
        <attr name="font" format="string" />
    </declare-styleable>

    <declare-styleable name="FontEditText">
        <attr name="font" format="string" />
    </declare-styleable>
</resources>